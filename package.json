{
  "name": "bun-markdown-display",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/backend/beIndex.tsx",
  "module": "src/backend/beIndex.tsx",
  "scripts": {
    "lint": "eslint .",
    "dev": "bun --hot src/backend/beIndex.tsx",
    "start": "NODE_ENV=production bun src/backend/beIndex.tsx",
    "updateMds": "cp README.md mds/README.md && cp 其他笔记.md mds/bun-react-tailwind-template.md",
    "build:all": "bun build:fe && bun build:be",
    "build:fe": "bun run build.ts",
    "build:be": "bun build:be1 && bun build:be2",
    "build:be1": "bun build src/backend/beIndex.tsx --outdir dist/backend --target bun --external '@/index.html' --production",
    "build:be2": "bun run scripts/fixHtmlImport.ts",
    "run:dist": "bun run dist/backend/beIndex.js"
  },
  "dependencies": {
    "@elysiajs/jwt": "^1.3.0",
    "@elysiajs/static": "^1.3.0",
    "@headlessui/react": "^2.2.4",
    "@tailwindcss/typography": "^0.5.16",
    "@types/highlight.js": "^10.1.0",
    "@types/marked": "^6.0.0",
    "@types/sanitize-html": "^2.16.0",
    "bun-markdown-display": "file:",
    "bun-plugin-tailwind": "^0.0.14",
    "clsx": "^2.1.1",
    "elysia": "^1.3.1",
    "flake-idgen": "^1.4.0",
    "highlight.js": "^11.11.1",
    "jose": "^6.0.11",
    "marked": "^15.0.12",
    "marked-highlight": "^2.2.1",
    "mermaid": "^11.6.0",
    "pixi-live2d-display": "^0.4.0",
    "pixi.js": "6",
    "react": "^19",
    "react-dom": "^19",
    "react-hook-form": "^7.56.4",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.0",
    "sanitize-html": "^2.17.0",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.0.6",
    "use-local-storage-state": "^19.5.0",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9.27.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "typescript-eslint": "^8.32.1"
  }
}
